%{
  techniques: [
    {
      queue: opaque
      passes: [
        {
          vert: vs
          frag: fs
          stage: default
          depthTest: true
          depthWrite: true
        }
      ]
    }
  ]
%}


%% vs {
  attribute vec3 a_position;
  attribute vec3 a_normal;
  attribute vec2 a_texCoord;

  #include <cc-global>
  #include <cc-local>

  varying vec2 uv;
  varying vec3 normal;

  void main () {
    uv = a_texCoord;
    normal = a_normal;
	  gl_Position = cc_matViewProj * cc_matWorld * vec4(a_position, 1);
  }
}

%% fs {
  varying vec2 uv;
  varying vec3 normal;

  void main () {
    gl_FragColor = vec4(normal * 0.5 + 0.5, 1);
    // gl_FragColor = vec4(abs(mod(uv, 2.0) - 1.0), 1, 1);
  }
}
